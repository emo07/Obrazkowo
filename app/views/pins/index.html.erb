<p id="notice"><%= notice %></p>

<div class='panel panel-default'>
  <div class='panel panel-heading'>
    <h1>Listing Pins</h1>
  </div>
  
  <div class='panel panel-body'>
    <table>
      <thead>
        <tr>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><b><%= pin.description %></b></td>
            <td><%= link_to 'Show', pin, class: 'btn group' %></td>
            <% if pin.user == current_user %>
            <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn group' %></td>
            <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn group' %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<br>

